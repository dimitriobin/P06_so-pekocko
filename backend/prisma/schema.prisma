generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Sauce {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       Int      
  name         String
  manufacturer String
  description  String
  mainPepper   String
  imageUrl     String?
  heat         Int
  likes        Likes[] 
  dislikes     Dislikes[]     
  user         User     @relation(fields: [userId], references: [id])
}

model Likes {
  id    Int     @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int      
  sauce         Sauce     @relation(fields: [sauceId], references: [id])
  sauceId       Int      

}

model Dislikes {
  id    Int     @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int      
  sauce         Sauce     @relation(fields: [sauceId], references: [id])
  sauceId       Int      

}

model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  name          String?
  password      String
  sauces        Sauce[]
  likes         Likes[]
  dislikes      Dislikes[]
}
